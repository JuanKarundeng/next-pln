{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Changed from 'bundler' to 'node'
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ESNext" // Changed from 'ES2017' to 'ESNext'
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/print/page.tsx",
    "components/validasi-pembayaran/ValidasiPembayaran.jsx",
    "lib/**/*.ts", // Tambahkan folder lib jika ada
    "types/**/*.ts" // Tambahkan folder types jika ada
  ],
  "exclude": ["node_modules"]
}
